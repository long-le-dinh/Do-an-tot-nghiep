@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    <div class="contact-form">
        <h3>THÔNG TIN SHOP</h3>
        <form action="#" method="post">
            <div class="form-group">
                <label for="name" style="display: inline-block; width: 100px;">Tên:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email" style="display: inline-block; width: 100px;">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <br />
            <div class="form-group">
                <label for="message" style="display: inline-block; width: 100px;">Tin nhắn:</label>
                <textarea id="message" name="message" rows="5" required></textarea>
            </div>

            <br />
            <button type="submit">Gửi thông tin</button>
        </form>
    </div>

    <div class="contact-info">
        <h3>Liên hệ thông tin sau:</h3>
        <address>
            Lẩu Hằng Béo<br />
            11b, Trần Phú<br />
            <abbr title="Phone">Contact:</abbr> 096 382 06 61
        </address>
        <address>
            <strong>Support:</strong> <a href="mailto:support@example.com">support@example.com</a><br />
            <strong>Marketing:</strong> <a href="mailto:marketing@example.com">marketing@example.com</a>
        </address>
    </div>
</main>
